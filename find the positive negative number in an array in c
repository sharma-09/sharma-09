#include <stdio.h>
void main() {
    int n,i;
    int flag=0;
    int count=0;
    int num=0;
    printf("Enter the number of elements in an array : ");
    scanf("%d",&n);
    int a[n];
    printf("Enter the elememts of an array :\n");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
        if(a[i]>0)
        flag++;
        else if(a[i]<0)
        count++;
        else
        num++;
    }
    printf("The total positive numbers are = %d\n",flag);
    printf("The total negative numbers are = %d\n",count);
    printf("The total number if zeroes are = %d",num);
    
}
